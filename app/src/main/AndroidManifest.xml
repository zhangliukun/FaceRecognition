<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zalezone.facerecognition">


    <!--<uses-sdk-->
        <!--android:minSdkVersion="9"-->
        <!--android:targetSdkVersion="17" />-->

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <!-- 屏幕为肖像模式 android:screenOrientation="portrait" -->
    <!-- android:configChanges="keyboardHidden|orientation" -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="zalezone.ui.activity.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="zalezone.ui.activity.SignupActivity" />
        <activity android:name="zalezone.ui.activity.SignupCameraActivity"/>
        <activity android:name="zalezone.ui.activity.FacerecCameraActivity"/>
        <activity android:name="zalezone.ui.activity.AboutActivity" />
        <activity android:name="zalezone.ui.activity.SettingActivity" />
        <activity android:name="zalezone.ui.activity.UsersActivity" />
        <activity android:name="zalezone.ui.activity.UserpicsActivity" />
        <activity android:name="zalezone.ui.activity.TestActivity" />
    </application>


</manifest>
